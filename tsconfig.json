    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2017",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist/",
        "lib": ["es2019", "dom"],
        "skipLibCheck": true
    },
    "include": ["source/**/*"]
}
