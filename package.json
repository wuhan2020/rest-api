{
    "name": "@wuhan2020/rest-api",
    "version": "2.0.0",
    "license": "AGPL-3.0-only",
    "description": "RESTful API service scaffold based on Node.js & TypeScript",
    "author": "shiy2008@gmail.com",
    "private": true,
    "source": "source/index.ts",
    "main": "dist/index.js",
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.899.0",
        "@aws-sdk/s3-request-presigner": "^3.899.0",
        "@koa/cors": "^5.0.0",
        "@koa/multer": "^4.0.0",
        "@koa/router": "^14.0.0",
        "@smithy/smithy-client": "^4.6.5",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "jsonwebtoken": "^9.0.2",
        "koa": "^3.0.1",
        "koa-bodyparser": "^4.4.1",
        "koa-jwt": "^4.0.4",
        "koa-logger": "^4.0.0",
        "koa-mount": "^4.2.0",
        "koa2-swagger-ui": "^5.12.0",
        "koagger": "^0.4.0",
        "marked": "^16.3.0",
        "mobx": "^6.15.0",
        "mobx-restful": "^2.1.3",
        "pg": "^8.16.3",
        "pg-connection-string": "^2.9.1",
        "reflect-metadata": "^0.2.2",
        "routing-controllers": "^0.11.3",
        "routing-controllers-openapi": "^5.0.0",
        "tslib": "^2.8.1",
        "typeorm": "^0.3.27",
        "undici": "^7.16.0",
        "uuid": "^11.1.0",
        "web-utility": "^4.6.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/koa": "^3.0.0",
        "@types/koa-logger": "^3.1.5",
        "@types/node": "^22.18.7",
        "better-sqlite3": "^12.4.1",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jiti": "^2.6.0",
        "koajax": "^3.1.2",
        "lint-staged": "^16.2.3",
        "prettier": "^3.6.2",
        "start-server-and-test": "^2.1.2",
        "swagger-typescript-api": "^13.2.13",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.2",
        "typescript-eslint": "^8.45.0"
    },
    "resolutions": {
        "reflect-metadata": "$reflect-metadata",
        "koa": "$koa"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "better-sqlite3"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4,
        "printWidth": 100,
        "overrides": [
            {
                "files": "*.yml",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write",
        "*.ts": "eslint --fix"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "scripts": {
        "install": "cp -u .env.example .env  ||  true",
        "prepare": "husky || true",
        "dev": "cross-env TS_NODE_TRANSPILE_ONLY=true  node -r ts-node/register --watch source/",
        "lint": "lint-staged",
        "build-test": "swagger-typescript-api generate -p http://localhost:8080/docs/spec -o test/ -n client.ts",
        "start-test": "rm -rf .data/  &&  node dist/",
        "jest": "jest",
        "debug": "server-test start-test 8080 jest",
        "test": "npm run build  &&  server-test start-test 8080 build-test  &&  npm run debug",
        "pack-type": "tsc --emitDeclarationOnly --outDir type/  &&  cd type/  &&  rm -f *.d.ts  &&  cp -rf model/* .  &&  rm -rf model/ service/ controller/",
        "build": "rm -rf dist/ type/*.d.ts  &&  tsc  &&  npm run pack-type",
        "start": "cross-env NODE_ENV=production  node dist/",
        "typeorm": "typeorm-ts-node-commonjs -d source/model/index.ts",
        "migration:generate": "npm run typeorm -- migration:generate",
        "migration:run": "npm run typeorm -- migration:run",
        "upgrade:dev": "npm run migration:generate -- migration/version  &&  npm run migration:run",
        "upgrade:pro": "cross-env NODE_ENV=production  npm run migration:generate -- .data/version  &&  npm run migration:run",
        "pack-image": "docker build -t wuhan2020/rest-api:latest .",
        "container": "docker rm -f rest-api  &&  docker run --name rest-api -p 8080:8080 -d wuhan2020/rest-api:latest"
    }
}
